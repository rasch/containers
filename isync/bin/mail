#!/bin/sh

GPG_DIR="${GPG_DIR:-${GNUPGHOME:-$HOME/.config/xpod/gnupg}}"
MAILDIR="${MAILDIR:-$HOME/.config/xpod/mail}"

test -d "$GPG_DIR" || \
  { printf 'ERROR: [%s] GPG_DIR path does not exist.\n' "$GPG_DIR"; exit 1; }

test -d "$MAILDIR" || \
  { printf 'ERROR: [%s] MAILDIR path does not exist.\n' "$MAILDIR"; exit 1; }

xpod -l -- \
  --entrypoint '["mail"]' \
  --env COLORTERM \
  --env EDITOR=vi \
  --env TERM \
  --env EMAIL \
  --env GMAIL_EMAIL \
  --env RISEUP_EMAIL \
  --env ZOHO_EMAIL \
  --volume "$GPG_DIR":/root/.gnupg \
  --volume "$MAILDIR":/root/mail \
  --workdir /root/mail \
  isync "$@"
